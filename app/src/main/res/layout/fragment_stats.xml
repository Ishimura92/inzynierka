            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ilość tankowań:"
                android:id="@+id/textView26"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="38"
