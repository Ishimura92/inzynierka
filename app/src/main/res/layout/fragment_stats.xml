<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_time_to_leave_white_24dp"
                    android:id="@+id/imageView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:text="Karta pojazdu"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView22" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_label_black_24dp"
                android:id="@+id/imageView10" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Marka"
                android:id="@+id/textView23"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Volkswagen"
                android:id="@+id/textViewStatsBrand"
                android:layout_marginLeft="30dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_label_outline_black_24dp"
                android:id="@+id/imageView13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Model"
                android:id="@+id/textView28"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Passat B5"
                android:id="@+id/textViewStatsModel"
                android:layout_marginLeft="30dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_time_to_leave_black_24dp"
                android:id="@+id/imageViewStatsBody" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nadwozie"
                android:id="@+id/textView30"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kombii"
                android:id="@+id/textViewStatsBody"
                android:layout_marginLeft="30dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_engine"
                android:id="@+id/imageView15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Silnik"
                android:id="@+id/textView32"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2.0E Benzyna"
                android:id="@+id/textViewStatsEngine"
                android:layout_marginLeft="30dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_calendar_black"
